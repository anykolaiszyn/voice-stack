# Environment variables for the voice stack
# Copy this file to .env and modify the values as needed

# Server configuration
SERVER_NAME=matrix.byte-box.org
PUBLIC_BASEURL=https://matrix.byte-box.org
ELEMENT_URL=https://chat.byte-box.org

# TURN server credentials
TURN_USERNAME=turn_user
TURN_PASSWORD=turn_password
TURN_SECRET=your_turn_secret_key_here

# Database credentials
POSTGRES_PASSWORD=synapse_password

# Registration settings
ENABLE_REGISTRATION=true
REGISTRATION_SECRET=change_me

# Registration token settings (set to require tokens for registration)
REGISTRATION_REQUIRES_TOKEN=false
# Pre-create registration tokens (comma-separated list)
# Format: "token1:uses,token2:uses" or "token1,token2" (unlimited uses)
# Example: "family2024:5,friends2024:10,relatives2024" 
REGISTRATION_TOKENS=

# Port configuration (customize if ports are already in use)
ELEMENT_PORT=8080
SYNAPSE_PORT=8008
TURN_PORT=3478
TURNS_PORT=5349

# Optional: Admin user (will be created on first run)
# ADMIN_EMAIL=admin@voice.local
