# Environment variables for the voice stack
# Copy this file to .env and modify the values as needed

# Server configuration
SERVER_NAME=matrix.byte-box.org
PUBLIC_BASEURL=https://matrix.byte-box.org
ELEMENT_URL=https://chat.byte-box.org

# TURN server credentials
TURN_USERNAME=turn_user
TURN_PASSWORD=turn_password
TURN_SECRET=your_turn_secret_key_here

# Database credentials
POSTGRES_PASSWORD=synapse_password

# Registration settings
ENABLE_REGISTRATION=true

# Optional: Admin user (will be created on first run)
# ADMIN_EMAIL=admin@voice.local
